<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/imagenView"
        android:layout_width="190dp"
        android:layout_height="219dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jjkposter" />

    <TextView
        android:id="@+id/tituloView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/aclonica"
        android:text="Jujutsu Kaisen"
        android:textColor="#0B0000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imagenView"
        app:layout_constraintStart_toEndOf="@+id/imagenView"
        app:layout_constraintTop_toTopOf="@+id/imagenView" />

</androidx.constraintlayout.widget.ConstraintLayout>